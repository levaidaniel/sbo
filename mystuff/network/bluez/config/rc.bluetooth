#!/bin/sh

bluez_start() {
  /usr/libexec/bluetooth/bluetoothd & >/dev/null
}

bluez_stop() {
  udevadm trigger --subsystem-match=bluetooth --action=remove
  pkill -TERM -x bluetoothd 1>/dev/null 2>/dev/null
}

case "$1" in
  start)
    bluez_start
    ;;
  stop)
    bluez_stop
    ;;
  restart)
    bluez_stop
    sleep 1
    bluez_start
    ;;
  *)
    printf "Usage: $N {start|stop|restart}\n"
    exit 1
    ;;
esac

